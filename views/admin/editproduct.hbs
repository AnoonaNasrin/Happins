 
  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
          <div class="row">
            <div class="col-12">
              <h2 class="tm-block-title d-inline-block" style="color:aliceblue">Add Product</h2>
            </div>
          </div>
          <div class="row tm-edit-product-row">
            <div class="col-xl-6 col-lg-6 col-md-12" style="color:teal ; font-size:medium">
              <form method="post" action="/admin/editproduct/{{upd._id}}" enctype="multipart/form-data" class="tm-edit-product-form">
                <div class="form-group mb-3">
                  <label for="name">Product Name
                  </label>
                  <input id="name" name="name" type="text" class="form-control validate" value="{{upd.name}}" required />
                </div>
                <div class="form-group mb-3">
                  <label for="price">Product price
                  </label>
                  <input id="price" name="price" type="number" class="form-control validate" value="{{upd.price}}" required />
                </div>
                <div class="form-group mb-3">
                  <label for="description">Description</label>
                  <textarea name="description" class="form-control validate" rows="3"  required>{{upd.description}}</textarea>
                </div>
                <div class="form-group mb-3">
                  <label for="category">Category</label>
                  <select class="custom-select tm-select-accounts" name="category"  id="category">
                    <option>{{upd.category}}</option>
                    <option >Juices</option>
                    <option >Deserts</option>
                    <option >Spicy</option>
                  </select>
                </div>
                <div class="row">
                  <div class="form-group mb-3 col-xs-12 col-sm-6">
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <p style="color: white;">Status</p>
                      <input type="radio" id="available" name="status" value="true" {{#if upd.status}} checked {{/if}} >
                      <label for="available">Available</label><br>
                      <input type="radio" id="available" name="status" value="false" {{#if upd.status }} {{else }} checked{{/if}}>
                      <label for="notavailable"> Not available</label>
                    </div>
                  </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="tm-product-img-dummy mx-auto">
               <img src="upload/{{upd.image}}" alt="no image found">    </div>
              <div class="custom-file mt-3 mb-3">
                
                <input type="file" class="btn btn-primary btn-block mx-auto " name="image"
                  style="background-color:dimgray ;border:none" value="UPLOAD PRODUCT IMAGE"/>
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block text-uppercase"
                style="color:dimgray; background-color: aliceblue;">Edit Product Now</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>