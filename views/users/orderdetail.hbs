<script>
    function cancelBooking(orderId, productId) {
        swal({
            title: "Are you sure ?",
            text: "Your order will be deleted",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '/cancelOrder',
                        method: 'post',
                        data: {
                            orderId,
                            productId
                        },
                        success: (response) => {
                            if (response.delete) {
                                swal(" Your  order had been deleted!", {
                                    icon: "success",
                                });
                                $("#op").load(location.href + " #op")
                            } else {
                                swal("Some Error happened");
                            }
                        }
                    })
                }

            });
    }
</script>