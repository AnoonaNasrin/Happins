<script>
    $(function () { $("#expire_date").datepicker(); });

    $('#addressForm').submit((event) => {
        console.log("form")
        event.preventDefault()
        $.ajax({
            url: '/save-address',
            method: 'post',
            data: $('#addressForm').serialize(),
            success: ((response) => {
                $("#addressContainer").load(location.href + " #addressContainer")
            })
        })
    })
    function deleteAddress(addressId) {
        $.ajax({
            url: '/deleteaddress',
            method: 'post',
            data: {
                addressId
            },
            success: ((response) => {
                $("#addressContainer").load(location.href + " #addressContainer")
            })

        })

    }
</script>