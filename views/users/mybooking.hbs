<script>
    function deleteBooking(bookId, bookDate,count) {
    $.ajax({
      url: '/delete-booking',
      method: 'post',
      data: {
        bookId,
        bookDate,
        count,
      },
      success: (response) => {
        Swal.fire(
          'Successful',
          'Your booking is cancelled',
          'success'
        )

