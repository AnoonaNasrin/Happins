<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
  integrity="sha384-eoTu3+HydHRBIjnCVwsFyCpUDZHZSFKEJD0mc3ZqSBSb6YhZzRHeiomAUWCstIWo" crossorigin="anonymous">
<section class="food_menu gray_bg">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-lg-5">
        <div class="section_tittle">
          <p>Popular Menu</p>
          <h2>Delicious Food Menu</h2>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="nav nav-tabs food_menu_nav" id="myTab" role="tablist">
          {{#each category}}
          <a style="text-decoration:none ;font-family:inherit;" class="" href="/menus/{{this._id}}">
            {{this.categoryName}} <img src="img/icon/play.svg" alt="play" /></a>
          {{/each}}
        </div>
      </div>
      <div class="col-lg-12">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active single-member" id="Special" role="tabpanel"
            aria-labelledby="Special-tab">
            <div class="row">
              {{! From Here }}
              {{#each product}}
              <div class="col-sm-6 col-lg-6">
                <div class="single_food_item media">
                  <a href="/item-detail/{{this._id}}"><img src="upload/{{this.image}}" class="mr-3" alt="..."
                      style="height: 165px; width: 165px; object-fit:cover;" /></a>
                  <div class="media-body align-self-center">
                    <h3>{{this.name}}</h3>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                      <h5>${{this.price}}</h5>
                      <a href="/add-to-cart/{{this._id}}" style=" text-decoration: none;  padding-right: 2rem;"><i
                          class="bi bi-cart" style="height: 3rem;"></i></a>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>